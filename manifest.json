{
  "name": "Medusa",
  "id": "medusa",
  "packaging_format": 1,
  "description": {
    "en": "Automatic TV shows downloader",
    "fr": "Téléchargement automatisé de séries TV"
  },
  "url": "https://pymedusa.com/",
  "license": "free",
  "maintainer": {
    "name": "",
    "url": ""
  },
  "multi_instance": false,
  "services": [
    "nginx"
  ],
  "requirements": {
    "yunohost": ">= 4.2.4"
  },
  "arguments": {
    "install": [
      {
        "name": "domain",
        "ask": {
          "en": "Choose a domain for Medusa",
          "fr": "Choisissez un domaine pour Medusa"
        },
        "example": "mydomain.org"
      },
      {
        "name": "path",
        "ask": {
          "en": "Choose a path for Medusa",
          "fr": "Choisissez un chemin pour Medusa"
        },
        "example": "/medusa",
        "default": "/medusa"
      }
    ]
  }
}
